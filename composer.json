{
    "name": "keibs/wp-theme",
    "description": "A basic Wordpress theme deployment.",
    "version": "1.0.0-beta",
    "type": "wordpress-core",
    "time": "2018-03-15",
    "license": "All Rights Reserved",
    "authors": [
        {
            "name": "Yacouba Keita",
            "email": "info@keibs.com",
            "role": "Developer"
        },
        {
            "name": "Joe Daigle",
            "email": "josephldaigle@yahoo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "johnpbloch/wordpress-core-installer": "^1.0",
        "johnpbloch/wordpress": "^4.2",
        "wp-cli/wp-cli": "~0.22",
        "symfony/var-dumper": "~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "extra": {
        "wordpress-install-dir": "../wp"
    },
    "installer-paths": {
        "/var/app/wp/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
        "/var/app/wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
        "/var/app/wp/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
}